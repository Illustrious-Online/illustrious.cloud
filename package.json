{
  "name": "illustrious.cloud",
  "version": "1.0.10",
  "private": true,
  "resolve": {
    "fallback": {
      "crypto": false
    }
  },
  "release": {
    "branches": [
      "main",
      "next"
    ]
  },
  "scripts": {
    "dev": "bun run --watch ./src/app.ts",
    "build": "bun build ./src/app.ts --target node --outdir ./dist",
    "start": "concurrently \"bun run dev\" \"bun run db:start\"",
    "db:start": "docker compose -f docker-compose.db.yml up -d && bun run db:migrate",
    "db:stop": "docker stop illustriouscloud-postgres-1",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:reset": "./src/utils/reset-db.sh",
    "check": "bunx @biomejs/biome check ./src",
    "check:fix": "bunx @biomejs/biome check --write ./src",
    "prepare": "bunx husky",
    "test:local": "bun run db:stop && bun run db:start && bun test"
  },
  "dependencies": {
    "@biomejs/biome": "^1.9.4",
    "@elysiajs/bearer": "^1.0.2",
    "@elysiajs/cors": "^1.0.2",
    "@elysiajs/swagger": "^1.0.5",
    "@sentry/bun": "^8.50.0",
    "@supabase/supabase-js": "^2.47.11",
    "@tqman/nice-logger": "^1.1.1",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node-steam-openid": "^1.0.3",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.39.2",
    "elysia": "latest",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "moment": "^2.30.1",
    "node-steam-openid": "^2.0.0",
    "openid-client": "^6.1.7",
    "pg": "^8.11.5",
    "semantic-release": "^24.2.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@types/bun": "^1.2.2",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.8",
    "bun-types": "latest",
    "codecov": "^3.8.3",
    "drizzle-kit": "^0.30.2",
    "jsdom": "^26.0.0",
    "postgres": "^3.4.4",
    "supabase": "^2.6.8",
    "ts-node": "^10.9.2",
    "tsx": "^4.9.3",
    "uuid": "^9.0.1",
    "vitest": "^3.0.4",
    "yoctocolors": "^2.1.1"
  },
  "module": "src/app.ts",
  "trustedDependencies": [
    "core-js",
    "core-js-pure",
    "es5-ext",
    "esbuild",
    "sharp"
  ]
}
